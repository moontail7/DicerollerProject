<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dicerollerproject.DiceRollerController">
    <!-- Center VBox content -->
    <center>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" styleClass="vbox-background" stylesheets="@styles2.css">
            <!-- Title Label -->
            <Label alignment="CENTER" styleClass="label-title" stylesheets="@styles2.css" text="Dice Roller (Java Beta V1.5)" />
            <VBox layoutX="-1.0" layoutY="36.0" />
            <!-- Instructions Label -->
            <Label maxWidth="613.0" prefHeight="41.0" prefWidth="613.0" styleClass="label-yellow" text="Enter a command in the format 'XdY+N' to roll the dice (e.g., 2d6+3)." />
            <!-- Quick Input Buttons and Result -->
            <VBox alignment="CENTER" spacing="10">
                <!-- Input Textbox and Buttons -->
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="tbxInput" layoutX="52.0" layoutY="14.0" maxWidth="600" prefHeight="40.0" prefWidth="526.0" styleClass="textfield-green" />
                    <Button fx:id="btnRollDice" alignment="CENTER" contentDisplay="CENTER" layoutX="583.0" layoutY="15.0" onAction="#btnRollDiceClick" prefHeight="41.0" prefWidth="75.0" styleClass="button" text="Roll" />
                </HBox>
                <!-- HBox  Buttons -->
                <HBox alignment="CENTER" spacing="5">
                    <Button fx:id="btnQISingleD4" layoutX="52.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD4Click" styleClass="d4button" />
                    <Button fx:id="btnQISingleD6" layoutX="144.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD6Click" styleClass="d6button" />
                    <Button fx:id="btnQISingleD8" layoutX="236.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD8Click" styleClass="d8button" />
                    <Button fx:id="btnQISingleD10" layoutX="328.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD10Click" styleClass="d10button" />
                    <Button fx:id="btnQISingleD12" layoutX="430.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD12Click" styleClass="d12button" />
                    <Button fx:id="btnQISingleD20" layoutX="532.0" layoutY="61.0" maxHeight="80" maxWidth="80" minHeight="80" minWidth="80" onAction="#btnQISingleD20Click" styleClass="d20button" />
                </HBox>
                <!-- Result Label -->
            </VBox>
            <!-- just a hbox to do spacing for the label beneath -->
            <HBox alignment="CENTER">
                <padding>
                    <Insets top="60.0" />
                </padding>
            </HBox>

             <!-- Add ComboBox for custom rolls -->
<HBox alignment="CENTER" spacing="10">
<ComboBox fx:id="cmbCustomRolls" promptText="Select Custom Roll" />
 <Button fx:id="btnInsertCustomRoll" onAction="#InsertCustomRoll" text="Insert Roll" />
</HBox>
            <Label fx:id="lblRollText" maxWidth="614.0" onMouseClicked="#btnClearDicef" prefHeight="100.0" prefWidth="614.0" styleClass="label-yellow" text="Roll to start" textAlignment="CENTER" wrapText="true" />
        </VBox>
    </center>
    <!-- Right Pane -->
    <right>
        <HBox prefHeight="600.0" prefWidth="131.0" BorderPane.alignment="CENTER">
            <children>
                <Pane prefHeight="600.0" prefWidth="153.0" style="-fx-background-color: grey;">
                    <children>
                        <!-- Welcome Person Label -->
                        <Label fx:id="lblUsername" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="91.0" maxWidth="600" prefHeight="61.0" prefWidth="115.0" text=" " textAlignment="CENTER">
                     <font>
                        <Font name="System Bold Italic" size="20.0" />
                     </font>
                        </Label>
                        <!-- all the buttons in the pane and their  directions -->
                        <Button alignment="CENTER" layoutX="11.0" layoutY="413.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="108.0" stylesheets="@styles2.css" text="Mode" />
                        <Button fx:id="btnhistory" alignment="CENTER" layoutX="10.0" layoutY="352.0" mnemonicParsing="false" onAction="#btnhistoryClicked" prefHeight="41.0" prefWidth="109.0" stylesheets="@styles2.css" text="History" />
                        <Button fx:id="btnProfile" alignment="CENTER" layoutX="10.0" layoutY="290.0" mnemonicParsing="false" onAction="#showProfileWindow" prefHeight="41.0" prefWidth="110.0" stylesheets="@styles2.css" text="Profile" />
                        <!-- ^^ onAction envokes function to go to profile window defined in dicerollercontroller -->
                        <Button fx:id="btnSettings" alignment="CENTER" layoutX="10.0" layoutY="227.0" mnemonicParsing="false" onAction="#btnSettingsClick" prefHeight="41.0" prefWidth="110.0" stylesheets="@styles2.css" text="Settings" />
                    </children>
                </Pane>
            </children>
        </HBox>
    </right>
</BorderPane>
