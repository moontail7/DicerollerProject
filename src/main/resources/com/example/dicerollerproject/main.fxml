<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="479.0" prefWidth="733.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dicerollerproject.DiceRollerController">

    <!-- Center area containing the main VBox content -->
    <center>
        <VBox alignment="CENTER" prefHeight="599.0" prefWidth="620.0" spacing="10.0" styleClass="vbox-background" stylesheets="@styles2.css">

                                                      <!-- Title Label -->
            <Label alignment="CENTER" styleClass="label-title" stylesheets="@styles2.css" text="Dice Roller (Java Beta V1.4)" />

                                                                     <!-- Instructions Label -->
            <Label maxWidth="600" styleClass="label-yellow" text="Enter a command in the format 'XdY+N' to roll the dice (e.g., 2d6+3)." />

                           <!-- Quick Input Buttons -->
            <HBox alignment="TOP_CENTER" maxHeight="200.0" minHeight="80" prefHeight="200.0" prefWidth="620.0" spacing="3.0">
            <Pane prefHeight="200.0" prefWidth="588.0">
               <children>
                      <!-- Input Textbox -->
                      <TextField fx:id="tbxInput" maxWidth="600" prefHeight="40.0" prefWidth="526.0" styleClass="textfield-green" />
                      <!-- Add various quick input buttons for different dice -->
                      <Button fx:id="btnQISingleD4" layoutY="41.0" onAction="#btnQISingleD4Click" styleClass="button" text="Add a d4" />
                      <Button fx:id="btnQISingleD6" layoutX="92.0" layoutY="41.0" onAction="#btnQISingleD6Click" styleClass="button" text="Add a d6" />
                      <Button fx:id="btnQISingleD8" layoutX="184.0" layoutY="41.0" onAction="#btnQISingleD8Click" styleClass="button" text="Add a d8" />
                      <Button fx:id="btnQISingleD10" layoutX="276.0" layoutY="41.0" onAction="#btnQISingleD10Click" styleClass="button" text="Add a d10" />
                      <Button fx:id="btnQISingleD12" layoutX="378.0" layoutY="41.0" onAction="#btnQISingleD12Click" styleClass="button" text="Add a d12" />
                      <Button fx:id="btnQISingleD20" layoutX="480.0" layoutY="41.0" onAction="#btnQISingleD20Click" styleClass="button" text="Add a d20" />
                      <!-- Button Roll -->
                      <Button fx:id="btnRollDice" layoutX="526.0" onAction="#btnRollDiceClick" styleClass="button" text="Roll" />
         
                                    <!-- Result Label -->
                     <Label fx:id="lblRollText" layoutX="220.0" layoutY="125.0" maxWidth="600" styleClass="label-yellow" text="Roll to start" textAlignment="CENTER" wrapText="true" />
               </children>
            </Pane>
            </HBox>
        </VBox>
    </center>
   <right>
      <HBox prefHeight="452.0" prefWidth="113.0" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: grey;">
               <children>
                      
                                  <!-- Welcome Person Label -->
                      <Label fx:id="lblWelcome" layoutX="-1.0" layoutY="36.0" maxWidth="600" prefHeight="43.0" prefWidth="115.0" styleClass="label-yellow" text=" " textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Button layoutX="14.0" layoutY="117.0" mnemonicParsing="false" stylesheets="@styles2.css" text="Settings" />
                  <Button fx:id="btnProfile" layoutX="10.0" layoutY="158.0" mnemonicParsing="false" onAction="#showProfileWindow" stylesheets="@styles2.css" text="Profile" />
                  <Button layoutX="14.0" layoutY="199.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0" stylesheets="@styles2.css" text="Roll History" />
                  <Button layoutX="13.0" layoutY="240.0" mnemonicParsing="false" stylesheets="@styles2.css" text="Mode" />
               </children>
            </Pane>
         </children>
      </HBox>
   </right>
</BorderPane>
