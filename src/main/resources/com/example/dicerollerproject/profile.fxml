<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dicerollerproject.ProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Top area for the page title -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="Profile Page" styleClass="label-title" />
        </HBox>
    </top>

    <!-- Center area for profile details -->
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <!-- User Information -->
            <Label fx:id="lblUsername" text="Username: " styleClass="label-large" />
            <Label fx:id="lblEmail" text="Email: " styleClass="label-large" />
            <Label fx:id="lblWelcome" text="Welcome!" styleClass="label-large" />

            
            <!-- Profile Actions -->
            <HBox spacing="10.0">

            </HBox>
        </VBox>
    </center>

    <!-- Bottom area for additional information or controls -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="User Information and Settings" />
        </HBox>
    </bottom>

</BorderPane>
