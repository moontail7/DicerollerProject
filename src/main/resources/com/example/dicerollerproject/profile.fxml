<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane 
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dicerollerproject.ProfileController">
    <!-- Top area for the page title -->
    <top>
        <HBox alignment="CENTER"
              spacing="10.0"
              BorderPane.alignment="CENTER">
            <Label styleClass="label-title"
                   text="Profile Page" />
        </HBox>
    </top>
    <!-- Center area for profile details -->
    <center>
        <VBox alignment="CENTER"
              spacing="10.0">
            <Pane prefHeight="385.0"
                  prefWidth="600.0">
                <children>
                    <!-- Welcome Person Label -->
                    <VBox layoutX="20.0"
                          layoutY="36.0">
                        <children>
                            <Label fx:id="lblUsername"
                                   alignment="CENTER"
                                   contentDisplay="CENTER"
                                   maxWidth="600"
                                   prefHeight="43.0"
                                   prefWidth="115.0"
                                   text=" "
                                   textAlignment="CENTER" />
                        </children>
                    </VBox>
                    <!-- Custom Rolls Area -->
                    <VBox layoutX="20.0"
                          layoutY="120.0"
                          spacing="10">
                        <HBox spacing="10">
                            <TextField fx:id="tbxRollName" promptText="Enter Roll Name" />
                            <TextField fx:id="tbxRollFormula" promptText="Enter Roll Formula (e.g., 2d6+3)" />
                            <Button fx:id="btnSaveCustomRoll" text="Save Custom Roll" onAction="#saveCustomRollClick" />
                           

                        </HBox>
<ListView fx:id="listCustomRolls" prefHeight="200.0" prefWidth="150.0" />
                    </VBox>
                    <!-- Profile Actions -->
                    <VBox layoutX="20.0"
                          layoutY="280.0"
                          spacing="10">
                        <!-- <Button text="Settings" onAction="#btnSettingsClick"/>
                        <Button text="Logout" onAction="#logoutClick"/> -->
                    </VBox>
                </children>
            </Pane>
        </VBox>
    </center>
    <!-- Bottom area -->
    <bottom>
        <HBox alignment="CENTER"
              spacing="10.0"
              BorderPane.alignment="CENTER" />
                    <Button fx:id="closeButton"
                    text="Close"
                    onAction="#closeHistoryWindow"
                    styleClass="button-close"/>
    </bottom>
</BorderPane>